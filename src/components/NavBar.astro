---
// src/components/NavBar.astro (solo mobile tweaks)
const logo = "/img/SF-logo.png";
const currentPage = Astro.url.pathname;
const isInicio = currentPage === "/";
const isMarcas = currentPage === "/marcas";
---
<header class="bg-[#f37021] text-white px-4 py-3">
  <div class="max-w-7xl mx-auto flex flex-col items-center md:flex-row md:justify-between">
    <!-- Logo + TÃ­tulo (mobile: columna | desktop: fila) -->
    <div class="flex flex-col items-center md:flex-row md:items-center">
      <a href="/" class="flex-shrink-0">
        <img src={logo} alt="Logo" class="h-10 w-auto" />
      </a>
      <h1 class="mt-2 md:mt-0 md:ml-3 text-lg sm:text-xl font-bold text-center md:text-left">
        Surtidora Ferretera &amp; Espazzio Ceramico
      </h1>
    </div>

  </div>
</header>
